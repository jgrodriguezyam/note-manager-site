@using NoteManager.Infrastructure.Constants
@using NoteManager.Infrastructure.Enums
@model NoteManager.Models.Users.LoginUser

@using (Html.BeginForm(EAction.Login.ToString(), EController.User.ToString(), FormMethod.Post, new { id = "LoginUser" }))
{
    <div class="form-group">
        <label for="UserName" class="col-form-label">Usuario</label>
        @Html.TextBoxFor(m => m.UserName, Model.UserName,
        new
        {
            @type = "text",
            @class = "form-control",
            @data_role = "none",
            @required = "true",
            @data_msg_required = MessageConstants.RequiredField,
            @data_val = "true",
            @data_val_length_max = "50",
            @data_val_length = "No puedes tener mas de 50 caracteres"
        })
        @Html.ValidationMessageFor(m => Model.UserName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Password" class="col-form-label">Contraseña</label>
        @Html.TextBoxFor(m => m.Password, Model.Password,
        new
        {
            @type = "password",
            @class = "form-control",
            @data_role = "none",
            @required = "true",
            @data_msg_required = MessageConstants.RequiredField,
            @data_val = "true",
            @data_val_length_max = "100",
            @data_val_length = "No puedes tener mas de 100 caracteres"
        })
        @Html.ValidationMessageFor(m => Model.Password, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary btn-block">Ingresar</button>
}