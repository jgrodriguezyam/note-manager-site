@using NoteManager.Infrastructure.Enums
@model NoteManager.Models.Companies.Company
@{
    ViewBag.Title = "Nueva Compañia";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Nueva Compañia</h1>
    </div>
</div>

@using (Html.BeginForm(EAction.Create.ToString(), EController.Company.ToString(), FormMethod.Post, new { @id = "formNew", enctype = "multipart/form-data" }))
{
    Html.RenderPartial("_Form", Model);
    <br/>
    <div class="btn-group btn-group-justified" role="group" aria-label="...">
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-default" onclick="location.href='@Url.Action(EAction.Index.ToString(), EController.Company.ToString())'">Cancelar</button>
        </div>
        <div class="btn-group" role="group">
            <button type="submit" class="btn btn-info" id="save">Guardar</button>
        </div>
    </div>
}