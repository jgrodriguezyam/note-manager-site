@using NoteManager.Infrastructure.Enums
@using NoteManager.Infrastructure.Tables

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Clientes</h1>
    </div>
</div>

<div id="@EController.Customer">
    <div class="row">
        <div class="col-md-12">
            <form class="row">
                <div class="form-group col-md-4">
                    <label for="Name" class="col-form-label">Customer</label>
                    <input type="text" id="Name" class="form-control" data-role="none" placeholder="Nombre" autocomplete="off"/>
                </div>
                <div class="form-group col-md-4">
                    <label for="Colony" class="col-form-label">Colonia</label>
                    <input type="text" id="Colony" class="form-control" data-role="none" placeholder="Colonia" autocomplete="off"/>
                </div>
                <div class="form-group col-md-4">
                    <label for="Municipality" class="col-form-label">Municipio</label>
                    <input type="text" id="Municipality" class="form-control" data-role="none" placeholder="Municipio" autocomplete="off" />
                </div>
            </form>
            <div class="row">
                <div class="form-group col-md-12">
                    <button type="button" class="btn btn-info btnFilter"><i class="fa fa-filter"></i> Filtrar</button>
                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action(EAction.New.ToString(), EController.Customer.ToString())'"><i class="fa fa-plus"></i> Nuevo</button>
                </div>
            </div>
        </div>
    </div>
    <br />
    @Html.Table()
</div>