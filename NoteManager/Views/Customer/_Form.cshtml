@using NoteManager.Infrastructure.Constants
@using NoteManager.Infrastructure.Enums
@using NoteManager.Models.Enums
@model NoteManager.Models.Customers.Customer

@{
    var genderType = new List<SelectListItem>()
    {
        new SelectListItem() { Text = "Masculino", Value = EGenderType.Male.GetValue().ToString(), Selected = EGenderType.Male.GetValue() == Model.Gender },
        new SelectListItem() { Text = "Femenino", Value = EGenderType.Female.GetValue().ToString(), Selected = EGenderType.Female.GetValue() == Model.Gender }
    };
}

@Html.HiddenFor(m => m.Id, Model.Id)

<div class="form-group">
    <label for="Name" class="col-form-label">Nombre</label>
    @Html.TextBoxFor(m => m.Name, Model.Name,
        new
        {
            @type = "text",
            @class = "form-control",
            @data_role = "none",
            @required = "true",
            @data_msg_required = GlobalConstants.RequiredField,
            @data_val = "true",
            @data_val_length_max = "50",
            @data_val_length = "No puedes tener mas de 50 caracteres"
        })
    @Html.ValidationMessageFor(m => Model.Name, "", new {@class = "text-danger"})
</div>

